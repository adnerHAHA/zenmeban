<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">
    <ImageView
        android:id="@+id/imgPhoto"
        android:layout_centerVertical="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/icon_mine"/>
    <LinearLayout
        android:id="@+id/mLinearLayOut"
        android:layout_toRightOf="@+id/imgPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_woman"
            android:id="@+id/imaSex"/>

        <TextView
            android:id="@+id/tvNickName"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="昵称"
            android:textColor="#3263a3"
            android:textSize="20dp"
            android:layout_margin="5dp"
            android:layout_above="@+id/mLinearLayOut"
            android:layout_toRightOf="@+id/imageView"
            android:layout_toEndOf="@+id/imageView"/>
    </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="3分钟前"
            android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
            android:layout_alignBottom="@+id/imgPhoto"
            android:layout_toRightOf="@+id/imgPhoto"
            android:layout_toEndOf="@+id/imgPhoto"
            android:id="@+id/tvTime"/>
        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="北京"
            android:layout_marginRight="10dp"
            android:layout_alignTop="@+id/mLinearLayOut"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tvStory"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:lines="4"
        android:textColor="#4b4845"
        android:textSize="18sp"
        android:text="故事内容.............................."/>
    <ImageView
        android:id="@+id/imgStory"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/mm_9"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
       >
        <ImageButton
            android:id="@+id/btnTalk"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:background="#FFFFFF"
            android:src="@mipmap/icon_talk"/>
<TextView
    android:id="@+id/tvTalkNum"
    android:layout_width="wrap_content"
    android:layout_height="50dp"
    android:text="200+"
    android:background="#FFFFFF"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical"/>
        <ImageButton
            android:id="@+id/btnLove"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:background="#FFFFFF"
            android:src="@mipmap/icon_heart"/>
        <TextView
            android:id="@+id/tvLoveNum"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="200+"
            android:background="#FFFFFF"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"/>
        <TextView

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFF"/>
        <ImageButton
            android:id="@+id/btnShare"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:background="#FFFFFF"
            android:layout_gravity="right"
            android:src="@mipmap/icon_share"/>
    </LinearLayout>
</LinearLayout>
