<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.fkl.story.UpdataPWDActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@mipmap/title_bg">
        <ImageButton
            android:id="@+id/toolbar_back"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_back"
            android:background="@mipmap/title_bg"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/toobar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="修改密码"/>
    </RelativeLayout>


       <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_margin="5dp"
        android:background="@drawable/editbackgroud"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="原密码："
            android:textColor="#3b3b3b"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"/>
        <EditText
            android:id="@+id/edPerPwd"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:inputType="textPassword"
            android:background="@null"
            android:layout_height="match_parent"/>
    </LinearLayout>
       <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_margin="5dp"
        android:background="@drawable/editbackgroud"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="新密码："
            android:textColor="#3b3b3b"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"/>
        <EditText
            android:id="@+id/edNewPwd"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:background="@null"
            android:inputType="textPassword"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_margin="5dp"
        android:background="@drawable/editbackgroud"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="重复密码："
            android:textColor="#3b3b3b"
            android:gravity="center_vertical"
            />
        <EditText
            android:id="@+id/edRePwd"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:background="@null"
            android:inputType="textPassword"
            android:layout_height="match_parent"/>
    </LinearLayout>
<Button
    android:id="@+id/btnUpdataPwd"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="30dp"
    android:text="修改密码"
   android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@mipmap/bottm_bg"
    android:gravity="center"/>
</LinearLayout>
