<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.fkl.story.RegistActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@mipmap/title_bg">
        <ImageButton
            android:id="@+id/toolbar_back"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_back"
            android:background="@mipmap/title_bg"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/toobar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="用户注册"/>
    </RelativeLayout>
<ImageView
    android:id="@+id/imgPortrait"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:src="@mipmap/icon_portrait"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="5dp"
    android:clickable="true"
    android:layout_gravity="center"/>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:background="@drawable/editbackgroud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="账号："
            android:gravity="center"/>
        <EditText
            android:id="@+id/edRegUser"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="3"
            android:background="@null"
           android:singleLine="true"
            android:gravity="center_vertical"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/editbackgroud"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        >
        <TextView

            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="昵称："
            android:gravity="center"/>
        <EditText
            android:id="@+id/edRegNickName"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="3"
            android:background="@null"
            android:singleLine="true"
            android:gravity="center_vertical"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/editbackgroud"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="密码："
            android:gravity="center"/>
        <EditText
            android:id="@+id/edRegPwd"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="3"
            android:background="@null"
            android:singleLine="true"
            android:inputType="textPassword"
            android:gravity="center_vertical"/>
    </LinearLayout>
    <Button
        android:id="@+id/btnReg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="注册"
        android:layout_margin="20dp"
        android:gravity="center"
        android:background="@mipmap/bottm_bg"/>
</LinearLayout>
